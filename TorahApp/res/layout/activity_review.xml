<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back" >

    <TextView
        android:id="@+id/tvLessonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="7dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ProgressBar
        android:id="@+id/pbContentLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>
    
     <TextView
        android:id="@+id/tvReviewContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLessonTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
		android:padding="7dp"
		android:textColor="#000000"
		android:textAppearance="?android:attr/textAppearanceMedium" />

     <Button
         android:id="@+id/btnRec"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_above="@+id/linearLayout1"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="20dp"
         android:background="@drawable/recording"
         android:visibility="gone" />
     <Button
         android:id="@+id/btnStop"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_above="@+id/linearLayout1"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="20dp"
         android:background="@drawable/stop"
         android:visibility="gone" />

     <Button
         android:id="@+id/btnPlay"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_above="@+id/linearLayout1"
         android:layout_marginLeft="20dp"
         android:layout_toRightOf="@+id/btnRec"
         android:background="@drawable/play"
         android:visibility="gone" />
     
     <Button
         android:id="@+id/btnPause"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_above="@+id/linearLayout1"
         android:layout_marginLeft="20dp"
         android:layout_toRightOf="@+id/btnRec"
         android:background="@drawable/push"
         android:visibility="gone" />

     <Button
         android:id="@+id/btnSend"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/linearLayout1"
         android:layout_alignRight="@+id/tvLessonTitle"
         android:text="Send"
         android:visibility="gone"
         android:background="@drawable/button_background" />
         
</RelativeLayout>