<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordSearchActivity"
    android:background="@drawable/back" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:text="Back"
        android:background="@drawable/button_background"
        android:layout_marginLeft="7dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBack"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:text="Next"
        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/btnReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBack"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:text="Review"
        android:visibility="gone"
        android:background="@drawable/button_background" />
    
	<TextView
        android:id="@+id/tvLessonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvLessonNo"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:text="The words below are hidden in this word search. See how many you can find." />

    <LinearLayout
        android:id="@+id/llWordSearchContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuestionTitle"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:gravity="center_horizontal" >

	    <GridView
	        android:id="@+id/gridview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:cacheColorHint="#FFFFFF"
	        android:gravity="center"
	        android:numColumns="9" >

	    </GridView>
	    <TableLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tableLayout1"
	        android:layout_marginRight="7dp" >
	
	        <TableRow
	            android:id="@+id/tableRow8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:gravity="center"
	            android:weightSum="1" >

	            <TextView
	                android:id="@+id/tvWord16"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="16. מָשָׁל"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord11"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="11. שָׁלוֹשׁ"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord6"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="6. בָּם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="1. בָּמוֹח"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	        </TableRow>
	
	        <TableRow
	            android:id="@+id/tableRow9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:gravity="center"
	            android:weightSum="1" >

	            <TextView
	                android:id="@+id/tvWord17"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="17. שָׁם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord12"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="12. בַּח"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord7"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="7. בָּא"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="2. לָמָה"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	        </TableRow>
	
	        <TableRow
	            android:id="@+id/tableRow10"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:gravity="center"
	            android:weightSum="1" >

	            <TextView
	                android:id="@+id/tvWord18"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="18. מוֹה"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord13"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="13. מָה"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord8"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="8. בּוֹא"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="3. שָׁה"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	        </TableRow>
	
	        <TableRow
	            android:id="@+id/tableRow10"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:gravity="center"
	            android:weightSum="1" >

	            <TextView
	                android:id="@+id/tvWord"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="    "
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord14"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="14. שׁבָּח"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord9"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="9. חָּם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="4. לָשׁ"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	        </TableRow>
	        <TableRow
	            android:id="@+id/tableRow10"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:gravity="center"
	            android:weightSum="1" >

	            <TextView
	                android:id="@+id/tvWord"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="     "
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord15"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="15. שָׁלוֹם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord10"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="10. בָּלָם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />

	            <TextView
	                android:id="@+id/tvWord5"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="5. מוֹם"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:layout_weight="0.25" />
	        </TableRow>
	    </TableLayout>
	</LinearLayout>
    <TextView
        android:id="@+id/tvScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="screen2"
        android:visibility="gone" />

    

</RelativeLayout>